<body>
  <div class="container">
    <h2>📊 Attendance Calculator</h2>
    <input type="number" id="total" placeholder="Total Classes" min="1">
    <input type="number" id="attended" placeholder="Attended Classes" min="0">
    <input type="number" id="target" placeholder="Target % (e.g., 80)" min="1" max="100">
    <button onclick="calculateAttendance()">Calculate</button>
    <div class="result" id="output"></div>
  </div>  <script>
    function calculateAttendance() {
      let total = parseInt(document.getElementById('total').value);
      let attended = parseInt(document.getElementById('attended').value);
      let target = parseInt(document.getElementById('target').value);
      let output = document.getElementById('output');

      if(isNaN(total) || isNaN(attended) || isNaN(target) || total <= 0 || attended < 0){
        output.innerHTML = "⚠️ Please enter valid numbers.";
        return;
      }

      let currentPercentage = (attended / total) * 100;
      let msg = `<b>Current Attendance:</b> ${currentPercentage.toFixed(2)}%<br>`;

      if(currentPercentage < target){
        let needed = Math.ceil(((target/100)*total - attended) / (1 - target/100));
        msg += `✅ You need to attend <b>${needed}</b> more classes in a row to reach ${target}%.`;
      } else {
        let canBunk = Math.floor((attended / (target/100)) - total);
        msg += `😎 You can bunk <b>${canBunk}</b> more classes and still stay at ${target}%.`;
      }

      output.innerHTML = msg;
    }
  </script></body>
</html>
